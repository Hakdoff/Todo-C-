# Use the official .NET SDK image for building the application
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

# Copy the project file and restore dependencies
COPY ["Todo.csproj", "./"]  # Replace with your .csproj filename
RUN dotnet restore "./Todo.csproj"

# Copy the rest of the source code
COPY . .

# Build the application
RUN dotnet publish "Todo.csproj" -c Release -o /app/publish

# Use the official ASP.NET runtime image for running the application
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

# Set the entry point for the application
ENTRYPOINT ["dotnet", "Todo.dll"]  # Replace with your .dll filename
